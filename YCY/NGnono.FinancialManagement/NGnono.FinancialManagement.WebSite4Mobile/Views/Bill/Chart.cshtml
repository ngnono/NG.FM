<script type="text/javascript">
    $(document).on('pageinit', pageInit);

    function chartSet(data) {
        var plot2 = jQuery.jqplot('chart1',
          data,
          {
              title: '',
              seriesDefaults: {
                  shadow: false,
                  renderer: jQuery.jqplot.PieRenderer,
                  rendererOptions: {
                      startAngle: 180,
                      sliceMargin: 4,
                      showDataLabels: true
                  }
              },
              legend: { show: true, location: 'w' }
          }
      );
        alert(plot2);
    }

    function chartInit() {
