@using NGnono.FinancialManagement.WebSupport.Auth
@if (Request.IsAuthenticated)
{
    var u = NGnono.Framework.ServiceLocation.ServiceLocator.Current.Resolve<IAuthenticationService>().GetCurrentUser(Context);
    
    @Html.ActionLink(u.ShowName, "Index", "Account", routeValues: null, htmlAttributes: new { data_icon = "gear" })
}
else
{
    @Html.ActionLink("登录", "Login", "Account", routeValues: null, htmlAttributes: new { data_icon = "gear" })
}
