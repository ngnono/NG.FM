@using NGnono.FinancialManagement.Models.Enums
@model NGnono.FinancialManagement.WebSiteCore.Models.Dto.Bill.IndexDto


@{
    ViewBag.Title = "我的财务状况";
}


@section Header
{
    @Html.ActionLink("返回", "Index", "Home", null, new { data_icon = "arrow-l", data_rel = "back" })
    <h1>@ViewBag.Title</h1>
    <a href="@Url.Action("Search",new {SearchDate=DateTime.Now})" data-icon="gear" class="ui-btn-right" data-ajax="false">Options</a>
}
<ul data-role="listview" data-divider-theme="a" data-inset="true">
    <li data-role="list-divider" role="heading">@String.Format("{0}月/{1}年", this.Model.Date.Month, this.Model.Date.Year)
    </li>
    <li data-theme="c">收入总额：￥@this.Model.Whole.Revenue
    </li>
    <li data-theme="c">支出总额：￥@this.Model.Whole.Expenses
    </li>
</ul>

<a data-role="button" href="@Url.Action("Create", "Bill")" data-ajax="false">记帐
</a>

<ul data-role="listview" data-split-icon="arrow-r" data-inset="true">
    <li>
        <a href="@Url.Action("RunningAccount", "Bill", new { dateType = (int)DateType.Day, currentDate = this.Model.Date.ToString("yyyy-MM-dd") })">
            @*<img alt="今天日期的图" src="/images/read_more_32x32.png" />*@
            <h3>今天</h3>
            <p>@this.Model.Taday</p>

            <p class="ui-li-aside">
                <span style="color: green"><strong>￥</strong>@this.Model.ThisToday.Expenses</span>
                <br />
                <br />
                <span style="color: red"><strong>￥</strong>@this.Model.ThisToday.Revenue</span>
            </p>
        </a>
    </li>
    <li>
        <a href="@Url.Action("RunningAccount", "Bill", new { dateType = (int)DateType.Week, currentDate = this.Model.Date.ToString("yyyy-MM-dd") })">
            @*<img alt="今天日期的图" src="/images/read_more_32x32.png" style="" />*@
            <h3>本周</h3>
            <p>@this.Model.WeekRange</p>

            <p class="ui-li-aside">
                <span style="color: green"><strong>￥</strong>@this.Model.ThisWeek.Expenses</span>
                <br />
                <br />
                <span style="color: red"><strong>￥</strong>@this.Model.ThisWeek.Revenue</span>
            </p>
        </a>
    </li>
    <li>
        <a href="@Url.Action("RunningAccount", "Bill", new { dateType = (int)DateType.Month, currentDate = this.Model.Date.ToString("yyyy-MM-dd") })">
            @*<img alt="今天日期的图" src="/images/read_more_32x32.png" />*@
            <h3>本月</h3>
            <p>@this.Model.MonthRange</p>

            <p class="ui-li-aside">
                <span style="color: green"><strong>￥</strong>@this.Model.ThisMonth.Expenses</span>
                <br />
                <br />
                <span style="color: red"><strong>￥</strong>@this.Model.ThisMonth.Revenue</span>

            </p>
        </a>
    </li>
</ul>
